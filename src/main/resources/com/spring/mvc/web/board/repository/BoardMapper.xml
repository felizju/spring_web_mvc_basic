<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mvc.web.board.repository.BoardMapper">

    <!-- 게시글 등록 -->
    <insert id="insertArticle">
        INSERT INTO board(board_no, writer, title, content, view_cnt)
            VALUES(seq_board.nextval, #{writer}, #{title}, #{content}, #{viewCnt})
    </insert>

    <!-- 게시글 삭제 -->
    <delete id="deleteArticle">
        DELETE FROM board
            WHERE board_no = #{boardNum}
    </delete>

    <resultMap id="boardMap" type="com.spring.mvc.web.board.domain.Board">
        <result property="boardNum" column="board_no" />
        <result property="viewCnt" column="view_cnt" />
    </resultMap>

    <!-- 게시글 전체 보기 -->
    <select id="getArticles" resultMap="boardMap">
        SELECT * FROM board
    </select>

    <!-- 게시글 내용 보기-->
    <select id="getArticleContent" resultMap="boardMap">
        SELECT * FROM board
            WHERE board_no = #{boardNum}
    </select>

    <!-- 게시글 수정 -->
    <update id="modifyArticle">
        UPDATE board
            SET writer = #{writer}, title = #{title}, content = #{content}
        WHERE board_no = #{boardNum}
    </update>

    <!-- 조회 수 증가 -->
    <update id="viewCntUp">
        UPDATE board
            SET view_cnt = view_cnt + 1
        WHERE board_no = #{boardNum}
    </update>

    <!-- 총 게시글 수 조회 -->
    <select id="getCount" resultType="int">
        SELECT COUNT(*) FROM board
    </select>

</mapper>